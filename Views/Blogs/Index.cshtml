@model List<Blog>//model tanımlaması liste şeklinde gelicek

<div class="mainbar">
   
	@foreach(var item in Model)
    {
		// forech ile modeldeki her bir blog için döngü oluşturuldu
        <div class="article">
            <h2><span>@item.Name</span> </h2>
            <div class="clr"></div>
            <p><span class="date">@item.PublishDate.ToString("MMMM d\\t\\h, yyyy, 'at' h:mm tt")</span>  &nbsp;|&nbsp;Etiketler <a href="#">@item.Tags</a></p>
            <img src="@item.ImageUrl" width="625" height="205" alt="" />
            @{
				//açıklamayı sql den alıp belli bir kısmını göstermek için kod yazıldı
				string Description = item.Description;  //açıklamanın belli bir kısmına kadar kelime al ? true : false yapısı kullanıldı
				string newDescription = Description.Length > 250 ? Description.Substring(0, 250) + "..." : Description;
            }
            <p>@newDescription</p> 
            <p class="spec"><a href="/Blogs/Details?id=@item.Id" class="rm">Devamı &raquo;</a> <!--burda href blog detayları sayfasına yönlendirildi id si şu olan şeyi de yolluyoru<-->
                <a href="#" class="com" style="margin-left:5px;"><span>@item.CommentCount</span> Comments</a>
@*                 <a href="#" class="com" style="margin-left:5px;"><span>@item.LikeCount</span> Like</a>
 *@                <a href="#" class="com" style="margin-left:5px;"><span>@item.ViewCount</span> view</a>
            </p>
         </div>
    }
	
</div>
