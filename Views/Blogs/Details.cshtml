@model Blog

<div class="mainbar">
    <div class="article">
        <h2><span>@Model.Name</span> Entry</h2>
        <div class="clr"></div>
        <p> @Model.Description</p>
        <p>Etiketler: <a href="#">@Model.Tags</a></p>
        <p>
            <a href="#"><strong>Comments (@Model.CommentCount)</strong></a> <span>&nbsp;&bull;&nbsp;</span> @Model.PublishDate.ToString("dd/MM/yyyy HH:mm") <span>&nbsp;&bull;&nbsp;</span>
        </p>
    </div>


    <div class="article">
        <h2><span>Yorumlar</span>Yapın </h2>
        <div class="clr"></div>

        @foreach (var item in ViewBag.Comments)
        {// yorumları forech döngüsü ile alıp kullanıcılara gösterme
            <div class="comment">
                <a href="#"><img src="/images/userpic.gif" width="40" height="40" alt="" class="userpic" /></a>
                <p>
                    <a href="#">@item.Name</a> :<br />
                    @item.PublishDate.ToString("MMMM d\\t\\h, yyyy, 'at' h:mm tt")
                </p>
                <p>@item.message.</p>
            </div>
        }
       
      
    </div>


    <div class="article">
        <h2><span>Leave a</span> Reply</h2>
        <div class="clr"></div>
        <form action="/Blogs/CreateComment" method="post" id="leavereply">  <!-- yorum kısmı için post ile gönderdik-->
            <ol>
                <input id ="blogid" name="blogid" type="hidden" value="@Model.Id"></input>

                <li>
                    <label for="name">İsim (Zorunlu)</label>
                    <input id="name" name="name" class="text" required />
                </li>
                <li>
                    <label for="email">Email Adresi (Zorunlu)</label>
                    <input id="email" name="email" class="text" required />
                </li>
                <li>
                    <label for="message">mesajın</label>
                    <textarea id="message" name="message" rows="8" cols="50"></textarea>
                </li>
                <li>
                    <input type="image" name="imageField" id="imageField" src="/images/submit.gif" class="send" />
                    <div class="clr"></div>
                </li>
            </ol>
        </form>
    </div>
</div>