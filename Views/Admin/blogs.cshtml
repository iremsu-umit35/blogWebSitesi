@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  //admin layaut render body kısmına
}

@* burda bloglar listelenecek admincontroller blogs actiondan gelen verilerle *@
@model List<Blog>



<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bloglarım</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Rapor oluştur
    </a>
</div>

@foreach (var item in Model)
{
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">@item.Name</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                     aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">aksiyonlar</div>
                    <a class="dropdown-item" href="#">düzenle</a>
                    <a class="dropdown-item" href="#">açık/kapalı</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">sil</a>
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            @{
                //açıklamayı sql den alıp belli bir kısmını göstermek için kod yazıldı
                string Description = item.Description;  //açıklamanın belli bir kısmına kadar kelime al ? true : false yapısı kullanıldı
                string newDescription = Description.Length > 180 ? Description.Substring(0, 180) + "..." : Description;
            }
            @newDescription
        </div>
    </div>

}


